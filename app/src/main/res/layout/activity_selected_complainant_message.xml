<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedComplainantMessageActivity"
    android:id="@+id/drawer_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/cm_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/label_name"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/label_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_name"
                />

            <TextView
                android:id="@+id/cm_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_age"
                android:layout_below="@+id/label_name"
                />

            <TextView
                android:id="@+id/label_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_age"
                />

            <TextView
                android:id="@+id/cm_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_gender"
                android:layout_below="@+id/label_age"
                />

            <TextView
                android:id="@+id/label_housecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HouseCode :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_gender"
                />

            <TextView
                android:id="@+id/cm_housecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HouseCode"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_housecode"
                android:layout_below="@+id/label_gender"
                />

            <TextView
                android:id="@+id/label_sitio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sitio :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_housecode"
                />

            <TextView
                android:id="@+id/cm_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sitio"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_sitio"
                android:layout_below="@+id/label_housecode"
                />

            <TextView
                android:id="@+id/label_contactnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact # :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_sitio"
                />

            <TextView
                android:id="@+id/cm_contactnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContactNumber"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_contactnumber"
                android:layout_below="@+id/label_sitio"
                />

            <TextView
                android:id="@+id/label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_contactnumber"
                />

            <TextView
                android:id="@+id/cm_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/label_date"
                android:layout_below="@+id/label_contactnumber"
                />

            <TextView
                android:id="@+id/label_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_date"
                />

            <TextView
                android:id="@+id/cm_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:lines="8"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_message"
                />

            <Button
                android:id="@+id/complaint_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/delete_rounded_button"
                android:fontFamily="@font/poppins_medium"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/danger"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/cm_message"
                />



        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white_smoke">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>








</androidx.drawerlayout.widget.DrawerLayout>